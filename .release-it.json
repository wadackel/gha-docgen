{
  "git": {
    "commitMessage": "build: release v${version}",
    "requireBranch": "main"
  },
  "hooks": {
    "after:bump": "pnpm build"
  },
  "npm": {
    "skipChecks": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md"
    }
  }
}
