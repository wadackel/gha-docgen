{
  "name": "gha-docgen",
  "version": "1.0.1",
  "description": "Generate documentation based on the Metadata of the GitHub Action.",
  "keywords": [
    "github",
    "actions",
    "github-action",
    "github-actions",
    "document",
    "generator",
    "docgen",
    "markdown"
  ],
  "homepage": "https://github.com/wadackel/gha-docgen",
  "bugs": {
    "url": "https://github.com/wadackel/gha-docgen/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wadackel/gha-docgen.git"
  },
  "license": "MIT",
  "author": "wadackel <wadackel@gmail.com>",
  "type": "module",
  "bin": {
    "gha-docgen": "./dist/bin.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup-node",
    "dev": "pnpm build && node dist/bin.js",
    "format": "pnpm lint --fix && pnpm format:prettier",
    "format:prettier": "prettier --write .",
    "lint": "oxlint --type-aware",
    "prepare": "husky install",
    "release": "semantic-release",
    "test": "vitest run",
    "test:update": "pnpm run test --update",
    "test:watch": "vitest watch",
    "typecheck": "tsc"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,yml,json}": "prettier --write"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "preset": "angular"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "meow": "^11.0.0",
    "yaml": "^2.2.1",
    "zod": "^3.21.4",
    "zod-error": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-angular": "17.6.3",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@tsconfig/esm": "1.0.3",
    "@tsconfig/node16": "1.0.4",
    "@tsconfig/strictest": "2.0.1",
    "@types/debug": "4.1.7",
    "@types/node": "18.16.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "oxlint": "1.18.0",
    "oxlint-tsgolint": "0.2.0",
    "prettier": "2.8.8",
    "prettier-plugin-packagejson": "2.4.3",
    "semantic-release": "21.0.2",
    "tsup": "6.7.0",
    "type-fest": "3.10.0",
    "typescript": "5.0.4",
    "vitest": "0.31.0"
  },
  "packageManager": "pnpm@10.17.1",
  "tsup": {
    "entry": [
      "src/bin.ts"
    ],
    "target": "node16",
    "minify": true,
    "format": "esm"
  }
}
